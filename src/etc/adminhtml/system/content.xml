<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <section id="content_customization" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>Content customization</label>
        <tab>scandipwa</tab>
        <resource>ScandiPWA_Customization::scandipwa_config</resource>

        <group id="footer_content" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Footer</label>

            <field id="footer_cms" translate="label" type="select" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Displayed CMS block</label>
                <comment>The block displayed in the footer (above copyright notice).</comment>
                <source_model>ScandiPWA\Customization\Model\Block\Source\Block</source_model>
            </field>
        </group>

        <group id="minicart_content" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Mini-cart</label>

            <field id="minicart_cms" translate="label" type="select" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Promotion CMS block</label>
                <comment>The block displayed in the mini-cart (above product list).</comment>
                <source_model>ScandiPWA\Customization\Model\Block\Source\Block</source_model>
            </field>
        </group>

        <group id="cart_content" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Cart</label>

            <field id="cart_cms" translate="label" type="select" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Promotion CMS block</label>
                <comment>The block displayed in the cart (bellow cart totals).</comment>
                <source_model>ScandiPWA\Customization\Model\Block\Source\Block</source_model>
            </field>
        </group>

        <group id="checkout_content" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Checkout</label>

            <field id="checkout_shipping_cms" translate="label" type="select" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Shipping promotion CMS block</label>
                <comment>The block displayed in the checkout (bellow totals).</comment>
                <source_model>ScandiPWA\Customization\Model\Block\Source\Block</source_model>
            </field>

            <field id="checkout_billing_cms" translate="label" type="select" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Billing promotion CMS block</label>
                <comment>The block displayed in the checkout (bellow totals).</comment>
                <source_model>ScandiPWA\Customization\Model\Block\Source\Block</source_model>
            </field>
        </group>

        <group id="header_content" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Header and Menu</label>

            <field id="header_menu" translate="label" type="select" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Menu to display</label>
                <comment>Please select a menu you would like to display</comment>
                <source_model>ScandiPWA\Customization\Model\Menu\Source\Menu</source_model>
            </field>

            <field id="header_cms" translate="label" type="select" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Promotion CMS block</label>
                <comment>The block displayed bellow the menu.</comment>
                <source_model>ScandiPWA\Customization\Model\Block\Source\Block</source_model>
            </field>

            <field id="contacts_cms" translate="label" type="select" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Promotion CMS block</label>
                <comment>The contacts block displayed above the menu.</comment>
                <source_model>ScandiPWA\Customization\Model\Block\Source\Block</source_model>
            </field>
        </group>

        <group id="product_list_content" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Product list</label>

            <field id="attribute_to_display" translate="label" type="select" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Displayed attribute</label>
                <comment>Attribute to display bellow product name. If you don't see your attribute listed here, make sure it is "Visible on Catalog Pages on Storefront".</comment>
                <source_model>ScandiPWA\Customization\Model\Product\Attribute\Source\VisibleOnFrontend</source_model>
            </field>
        </group>

        <group id="cookie_content" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Cookie Popup</label>

            <field id="cookie_text" translate="label" type="textarea" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Cookie Popup Text</label>
                <comment>The text there is displayed in the cookie popup.</comment>
            </field>

            <field id="cookie_link" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Cookie Popup Read more Link</label>
                <comment>The link there is used in the read more for cookie popup.</comment>
            </field>

            <field id="cookie_script" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Cookie Script</label>
                <comment>If you want to use a 3th-party script then add it here and it will replace the normal cookie popup</comment>
            </field>
        </group>

        <group id="contact_us_content" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Contact Us Page</label>

            <field id="contact_us_cms_block" translate="label" type="select" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Contact Us CMS Block</label>
                <comment>The block displayed in the Contact Us page</comment>
                <source_model>ScandiPWA\Customization\Model\Block\Source\Block</source_model>
            </field>
        </group>
    </section>
</include>
